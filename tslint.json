{
	"extends": "tslint:recommended",
	"rules": {
		"indent": [true, "tabs"],
		"interface-name": [false],
		"max-line-length": {
			"options": [
				120
			]
		},
		"member-ordering": {
			"severity": "error",
			"options": [true, "variables-before-functions", "static-before-instance"]
		},
		"new-parens": true,
		"no-arg": true,
		"no-bitwise": {
			"severity": "error",
			"options": [true]
		},
		"no-conditional-assignment": {
			"severity": "error",
			"options": [true]
		},
		"no-consecutive-blank-lines": {
			"severity": "warning",
			"options": [true]
		},
		"no-console": {
			"severity": "none",
			"options": [
				"debug",
				"info",
				"log",
				"time",
				"timeEnd",
				"trace"
			]
		},
		"no-duplicate-variable": {
			"severity": "error",
			"options": [true]
		},
		"no-shadowed-variable": {
			"severity": "error",
			"options": [true]
		},
		"no-var-requires": {
			"severity": "error",
			"options": [true]
		},
		"object-literal-sort-keys": false,
		"object-literal-shorthand": false,
		"object-literal-key-quotes": [true, "as-needed"],
		"ordered-imports": false,
		"quotemark": {
			"severity": "warning",
			"options": [true, "single", "avoid-escape", "avoid-template"]
		},
		"radix": false,
		"semicolon": {
			"severity": "error",
			"options": ["always"]
		},
		"trailing-comma": false,
		"triple-equals": {
			"severity": "error",
			"options": [true]
		},
		"typedef": {
			"severity": "error",
			"options": [true, "callSignature", "catchClause", "parameter", "propertySignature"]
		}
	},
	"defaultSeverity": "warning",
	"jsRules": {
		"max-line-length": {
			"options": [
				120
			]
		}
	}
}